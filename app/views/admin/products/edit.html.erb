<div class="admin-form">
  <h1>Edit Product</h1>
  
  <%= form_with model: @product, url: admin_product_path(@product), local: true do |f| %>
    <%= render 'form', f: f %>
    
    <div class="form-actions">
      <%= f.submit "Update Product", class: "btn btn-primary" %>
      <%= link_to "Cancel", admin_products_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
